{
  "openapi": "3.0.0",
  "info": {
    "title": "Matches Service API",
    "version": "1.0.0",
    "description": "API documentation for Matches Service"
  },
  "servers": [
    {
      "url": "http://localhost:3004/api"
    }
  ],
  "paths": {
    "/matches": {
      "get": {
        "summary": "Get all matches",
        "responses": {
          "200": {
            "description": "A list of matches",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "team1": {
                        "type": "string"
                      },
                      "team1_logo_url": {
                        "type": "string"
                      },
                      "team2": {
                        "type": "string"
                      },
                      "team2_logo_url": {
                        "type": "string"
                      },
                      "team1_goals": {
                        "type": "integer"
                      },
                      "team2_goals": {
                        "type": "integer"
                      },
                      "stadium": {
                        "type": "string"
                      },
                      "start_time": {
                        "type": "string"
                      },
                      "stream_url": {
                        "type": "string"
                      },
                      "registration_form_url": {
                        "type": "string"
                      },
                      "is_active": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
