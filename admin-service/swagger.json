{
  "openapi": "3.0.0",
  "info": {
    "title": "Admin Service API",
    "version": "1.0.0",
    "description": "API documentation for Admin Service"
  },
  "servers": [
    {
      "url": "http://localhost:3000/admin"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/make-admin": {
      "put": {
        "summary": "Make a user an admin",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "The username of the user to make an admin"
                  }
                },
                "required": [
                  "username"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User is now an admin"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },"/make-not-admin": {
      "put": {
        "summary": "Make a user not an admin",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "The username of the user to make not an admin"
                  }
                },
                "required": [
                  "username"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User is now not an admin"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/add-news": {
      "post": {
        "summary": "Add a new news item",
        "tags": [
          "News"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "photo": {
                    "type": "string",
                    "format": "byte",
                    "description": "The photo of the news item"
                  },
                  "title": {
                    "type": "string",
                    "description": "The title of the news item"
                  },
                  "text": {
                    "type": "string",
                    "description": "The text of the news item"
                  },
                  "author": {
                    "type": "string",
                    "description": "The author of the news item"
                  }
                },
                "required": [
                  "title",
                  "text",
                  "author"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "News item created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/delete-news/{id}": {
      "delete": {
        "summary": "Delete a news item by ID",
        "tags": [
          "News"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "The ID of the news item to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "News item deleted successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "News not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
